{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "no-console": "warn",
    "compiler-version": [
      "warn",
      "^0.8.0"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ]
  }
}